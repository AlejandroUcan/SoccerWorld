<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  
  <body>
    <%- include('../partials/header') %>
        
    <main class="main-content form-content">          
      <section>
        <h2 class="form-title">Registro de Producto</h2>
        <hr>

        <form method="POST" action="/products">
          <div class="form-group">
            <label for="id">id</label>
            <input type="text" class="form-control" id="id" name="id">
          </div>

          <div class="form-group">
            <label for="equipo">Equipo</label>
            <input type="text" class="form-control" id="equipo" name="equipo">
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="liga">Liga</label>
              <select id="liga" class="form-control" name="liga">
                <option selected>Choose..</option>
                <option>Premier League</option>
                <option>La Liga</option>
                <option>Bundesliga</option>
                <option>Calcio</option>
                <option>Ligue 1</option>
                <option>Liga MX</option>
                <option>Brasileirão</option>
                <option>Superliga Argentina</option>
                <option>MLS</option>
              </select>
            </div>

            <div class="form-group col-md-6">
              <label for="marca">Marca</label>
              <select id="marca" class="form-control" name="marca">
                <option selected>Choose..</option>
                <option>Adidas</option>
                <option>Nike</option>
                <option>Atlética</option>
                <option>Puma</option>
                <option>Pirma</option>
                <option>Joma</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="tipo">Tipo</label>
              <select id="tipo" class="form-control" name="tipo">
                <option selected>Choose..</option>
                <option>Local</option>
                <option>Visitante</option>
                <option>Alternativo</option>
              </select>
            </div>

            <div class="form-group col-md-6">
              <label for="temporada">Temporada</label>
              <select id="temporada" class="form-control" name="temporada">
                <option selected>Choose..</option>
                <option>2018/2019</option>
                <option>2019/2020</option>
                <option>2020/2021</option>
                <option>2021/2022</option>
                <option>2022/2023</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="categoria">Categoría</label>
            <select class="form-control" id="categoria" name="categoria">
                <option selected>Choose..</option>
                <option>Hombre</option>
                <option>Mujer</option>
                <option>Unisex</option>
                <option>Kids</option>
            </select>
          </div>

          <div class="form-group">
            <label for="precio">Precio</label>
            <input type="text" class="form-control" id="precio" name="precio">
          </div>
            
          <div class="form-group">
            <label for="imagen">Imagen</label>
            <input type="file" class="form-control-file" id="imagen" name="imagen">
          </div>
          <hr>

          <button type="submit" class="btn btn-primary btn-lg">Agregar</button>
        </form>
      </section>
    </main>
     
    <%- include('../partials/footer') %>
  </body>
</html>