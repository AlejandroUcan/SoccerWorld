<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  
  <body>
    <%- include('../partials/header') %>
        
    <main class="main-content form-content">          
      <section>
        <h2 class="form-title">Registro de Producto</h2>
        <hr>

        <form method="POST" action="/products">
          <div class="form-group">
            <label for="equipo">Equipo</label>
            <input type="text" class="form-control" id="equipo" name="equipo">
          </div>

          <div class="form-group">
            <label for="descripcion">Descripción</label>
            <textarea class="form-control" id="descripcion" rows="3" name="descripcion"></textarea>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="liga">Liga</label>
              <select id="liga" class="form-control" name="liga">
                <option selected>Liga MX</option>
                <option>Premier League</option>
                <option>La Liga</option>
                <option>Bundesliga</option>
                <option>Calcio</option>
                <option>Ligue 1</option>
                <option>Brasileirão</option>
                <option>Superliga Argentina</option>
              </select>
            </div>
            
            <div class="form-group col-md-6">
              <label for="marca">Marca</label>
              <select id="marca" class="form-control" name="marca">
                <option selected>Nike</option>
                <option>Adidas</option>
                <option>Reebok</option>
                <option>Under Armour</option>
                <option>Converse</option>
                <option>Vans</option>
                <option>Atlética</option>
                <option>Puma</option>
                <option>Pirma</option>
                <option>Joma</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="categoria">Categoría</label>
            <select class="form-control" id="categoria" name="categoria">
                <option selected>Unisex</option>
                <option>Hombre</option>
                <option>Mujer</option>
                <option>Kids</option>
            </select>
          </div>
            
          <div class="form-group">
            <label for="imagen">Imagen</label>
            <input type="file" class="form-control-file" id="imagen" name="imagen">
          </div>

          <button type="submit" class="btn btn-primary btn-lg">Comprar</button>
          <div class="btn-group" role="group" aria-label="Basic example">
            <button type="submit" class="product-button">
              <img class="header-icon" src="/images/icons/buttons/agregar.png" alt="botonAgregar">
            </button>
            
            <button type="reset" class="product-button">
              <img class="header-icon" src="/images/icons/buttons/agregar.png" alt="botonAgregar">
            </button>
          </div>
        </form>
      </section>
    </main>
     
    <%- include('../partials/footer') %>
  </body>
</html>