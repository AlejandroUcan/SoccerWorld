<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  
  <body>
    <%- include('../partials/header') %>

    <main class="main-content">
        <%- include('../partials/aside') %>
        
      <section class="flex-product-detail">
        <article>
          <div>
            <h2><b>Chelsea</b></h2>
            <h4><i>Local 2021/2022</i></h4>
            <img class="flex-product-detail-img" src="/images/products/product_1.jpg">
          </div>
        </article>
      
        <article>
          <div class="form-group">
            <label for="inputAddress2">Equipo</label>
            <input type="text" class="form-control" id="inputAddress2">
          </div>
    
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Descripción</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputState">Liga</label>
              <select id="inputState" class="form-control">
                <option selected>Liga MX</option>
                <option>Premier League</option>
                <option>La Liga</option>
                <option>Bundesliga</option>
                <option>Calcio</option>
                <option>Ligue 1</option>
                <option>Brasileirão</option>
                <option>Superliga Argentina</option>
              </select>
            </div>
            
            <div class="form-group col-md-6">
              <label for="inputState">Marca</label>
              <select id="inputState" class="form-control">
                <option selected>Nike</option>
                <option>Adidas</option>
                <option>Reebok</option>
                <option>Under Armour</option>
                <option>Converse</option>
                <option>Vans</option>
                <option>Atlética</option>
                <option>Puma</option>
                <option>Pirma</option>
                <option>Joma</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="exampleFormControlSelect1">Categoría</label>
            <select class="form-control" id="exampleFormControlSelect1">
              <option selected>Unisex</option>
              <option>Hombre</option>
              <option>Mujer</option>
              <option>Kids</option>
            </select>
          </div>
          <hr>

          <div class="form-group">
            <label for="exampleFormControlFile1">Imagen</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
          </div>
          <hr>
            
          <button type="button" class="btn btn-primary btn-lg">Comprar</button>
        </article>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
